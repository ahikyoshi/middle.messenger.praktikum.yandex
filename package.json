{
  "name": "chats",
  "version": "0.2.1",
  "description": "Yandex Pract",
  "scripts": {
    "build": "webpack --config ./configs/webpack.config.js",
    "dev": "webpack-dev-server --config ./configs/webpack.config.js",
    "test": "jest",
    "prepare": "npm i husky --save-dev",
    "ts:check": "tsc --noEmit",
    "lint": "eslint  src/ --ext .ts",
    "lint:styles": "stylelint  src/**/*.scss"
  },
  "engines": {
    "node": ">=12",
    "browsers": "> 0.25%"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "/node_modules/(?!nanoid)"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "^core/tests/(.*)$": "<rootDir>/src/core$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^types(.*)$": "<rootDir>/src/types$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^img(.*)$": "<rootDir>/src/img$1",
      "^routes(.*)$": "<rootDir>/src/routes$1",
      "^vendor(.*)$": "<rootDir>/src/vendor$1",
      "^api(.*)$": "<rootDir>/src/api$1",
      "^services(.*)$": "<rootDir>/src/services$1"
    }
  },
  "targets": {
    "regular": {
      "context": "browser",
      "outputFormat": "global",
      "isLibrary": false,
      "includeNodeModules": {
        "jquery": false
      }
    }
  },
  "author": "ahiky (ahikyoshi@gmail.com)",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "7.21.5",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.5",
    "@types/jest": "29.5.1",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "css-loader": "6.7.3",
    "eslint": "8.40.0",
    "html-webpack-plugin": "5.5.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "mini-css-extract-plugin": "2.7.5",
    "nanoid": "4.0.1",
    "node-sass": "8.0.0",
    "sass-loader": "13.2.2",
    "stylelint": "15.6.1",
    "stylelint-config-standard-scss": "9.0.0",
    "stylelint-order": "6.0.3",
    "stylelint-scss": "^5.0.0",
    "terser-webpack-plugin": "5.3.7",
    "ts-loader": "9.4.2",
    "webpack": "5.80.0",
    "webpack-cli": "5.0.2",
    "webpack-dev-server": "4.13.3"
  }
}
