{
  "name": "chats",
  "version": "0.2.1",
  "description": "Yandex Pract",
  "scripts": {
    "build": "webpack --config ./configs/webpack.config.js",
    "dev": "webpack-dev-server --config ./configs/webpack.config.js",
    "eslint": "npx eslint ./src",
    "test": "node --loader ts-node/esm ./node_modules/mocha/bin/mocha --extension ts",
    "ts:check": "tsc --noEmit",
    "lint": "eslint  src/ --ext .ts",
    "lint:styles": "stylelint  src/**/*.css",
    "lint:styles:fix": "stylelint  src/**/*.css --fix",
    "lint:fix": "eslint src/ --ext .ts --fix"
  },
  "engines": {
    "node": ">=12",
    "browsers": "> 0.25%"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint"
    ],
    "src/**/*.css": [
      "npm run lint:styles"
    ],
    "src/**/*.html": [
      "prettier --write"
    ]
  },
  "targets": {
    "regular": {
      "context": "browser",
      "outputFormat": "global",
      "isLibrary": false,
      "includeNodeModules": {
        "jquery": false
      }
    }
  },
  "author": "ahiky (ahikyoshi@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "@parcel/transformer-sass": "2.8.2",
    "@parcel/transformer-typescript-tsc": "2.8.2",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "babel": "^6.23.0",
    "eslint": "8.34.0",
    "express": "4.18.2",
    "nanoid": "4.0.1",
    "parcel": "2.8.2",
    "parcel-plugin-nuke-dist": "1.0.1",
    "stylelint": "15.2.0",
    "stylelint-config-standard": "30.0.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@babel/register": "^7.21.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.5.1",
    "husky": "^8.0.3",
    "mini-css-extract-plugin": "^2.7.5",
    "mocha": "^10.2.0",
    "sass-loader": "^13.2.2",
    "terser-webpack-plugin": "^5.3.7",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3"
  }
}
