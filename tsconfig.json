{
  "compilerOptions": {
    "outDir": "./app",
    "rootDir": "../",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*",
    "test/index.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
